{
    "extends": "eslint:recommended",
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-console": 0,
        "eqeqeq": 2,
        "no-bitwise": 2,
        "curly": 2,
        "space-in-parens": ["error", "never"],
        "semi": ["error", "always"],
        "no-unused-vars": [0, { "varsIgnorePattern": "^h$" }]
    },
    "globals": {
        "console": true,
        "window": true,
        "document": true,
        "setTimeout": true,
        "$": true,
        "jQuery": true,
        "CodeMirror": true,
        "module": true,
        "it": true,
        "expect": true,
        "describe": true,
        "before": true,
        "_____jq_____": true,
        "CampusExplorer": true,
        "TTT": true,
        "require": true,
        "__dirname": true,
        "process": true,
        "fixture": true,
        "__html__": true,
        "XMLHttpRequest": true,
        "chai": true,
        "Promise": true,
        "ENV_TABS": true,
        "Diff2HtmlUI": true,
        "EXAMPLE_JSON": true
    }
}