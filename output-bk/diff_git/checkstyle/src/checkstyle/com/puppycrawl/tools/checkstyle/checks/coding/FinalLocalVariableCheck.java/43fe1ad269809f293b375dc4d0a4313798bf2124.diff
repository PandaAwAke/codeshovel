     private boolean inAbstractMethod(DetailAST aAST)
     {
         DetailAST parent = aAST.getParent();
         while (parent != null) {
             if (parent.getType() == TokenTypes.METHOD_DEF) {
                 final DetailAST modifiers =
                     parent.findFirstToken(TokenTypes.MODIFIERS);
