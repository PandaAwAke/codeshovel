         mChecking =
             isExceptionClass(aAST.findFirstToken(TokenTypes.IDENT).getText());
     }
 
     /** Called when we leave class definition. */
     private void leaveClassDef()
     {
         mChecking = ((Boolean) mCheckingStack.pop()).booleanValue();
     }
 
