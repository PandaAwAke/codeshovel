     public void setIgnorePattern(String format)
         throws ConversionException
     {
         try {
             ignorePattern = Utils.getPattern(format);
         }
         catch (final PatternSyntaxException e) {
             throw new ConversionException("unable to parse " + format, e);
         }
     }
