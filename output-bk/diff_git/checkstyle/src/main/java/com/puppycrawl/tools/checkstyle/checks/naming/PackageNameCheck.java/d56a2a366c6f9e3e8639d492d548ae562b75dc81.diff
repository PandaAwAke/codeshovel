         // Uppercase letters seem rather uncommon, but they're allowed in
         // http://docs.oracle.com/javase/specs/
         //   second_edition/html/packages.doc.html#40169
         super("^[a-z]+(\\.[a-zA-Z_][a-zA-Z0-9_]*)*$");
     }
 
