     private LocalizedMessage createLocalizedMessage(String message)
     {
         return new LocalizedMessage(
                 0,
                 Definitions.CHECKSTYLE_BUNDLE,
                 "general.exception",
                 new String[] {message },
                 getId(),
                 this.getClass(), null);
