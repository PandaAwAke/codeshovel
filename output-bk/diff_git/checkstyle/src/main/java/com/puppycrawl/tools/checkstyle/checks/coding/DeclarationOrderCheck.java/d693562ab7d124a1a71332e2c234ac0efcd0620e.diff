     private void processModifiers(DetailAST ast) {
 
         final ScopeState state = scopeStates.peek();
         if (ast.findFirstToken(TokenTypes.LITERAL_STATIC) != null) {
             if (state.currentScopeState > STATE_STATIC_VARIABLE_DEF) {
                 if (!ignoreModifiers
